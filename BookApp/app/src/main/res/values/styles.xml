<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="favToast">
    <item name="colorBackground">#add8e6</item>
    <item name="textColor">#000</item>
    <item name="iconLeft">@drawable/red</item>
    <item name="iconRight">@drawable/red</item>
    <item name="strokeWidth">3dp</item>
    <item name="cornerRadius">10dp</item>
</style>

    <style name="mainToast">
        <item name="colorBackground">#94ffab</item>
        <item name="textColor">#000</item>
        <item name="iconLeft">@drawable/ic_baseline_warning_24</item>
        <item name="iconRight">@drawable/ic_baseline_warning_24</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">7dp</item>
    </style>
</resources>